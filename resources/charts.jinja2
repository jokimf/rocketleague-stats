<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
</head>
<body>
<canvas id="myChart" width="100" height="50"></canvas>
</body>
<script>

    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ label }},
            datasets: [{
                label: 'Knus',
                data: {{ k }},
                backgroundColor: 'rgba(47,147,26,0.2)',
                borderColor: 'rgba(47,147,26,0.8)',
                borderWidth: 3
            }, {
                label: 'Puad',
                data: {{ p }},
                backgroundColor: 'rgba(147,26,26,0.2)',
                borderColor: 'rgba(147,26,26,0.8)',
                borderWidth: 3
            }, {
                label: 'Sticker',
                data: {{ s }},
                backgroundColor: 'rgba(26,115,147,0.2)',
                borderColor: 'rgba(26,115,147,0.8)',
                borderWidth: 3
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
</html>